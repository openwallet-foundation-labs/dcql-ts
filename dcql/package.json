{
  "name": "dcql",
  "description": "Digital Credentials Query Language (DCQL)",
  "author": "Martin Auer",
  "version": "0.2.22",
  "private": false,
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    }
  },
  "files": ["dist"],
  "license": "MIT",
  "scripts": {
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --sourcemap",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "valibot": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  },
  "homepage": "https://github.com/openwallet-foundation-labs/dcql-ts/dcql",
  "repository": {
    "type": "git",
    "url": "https://github.com/openwallet-foundation-labs/dcql-ts/dcql",
    "directory": "dcql"
  },
  "keywords": [
    "Digital Credentials Query Language (DCQL)",
    "Credentials Query Language",
    "Verifiable Presentation Query Language",
    "Verifiable Presentations",
    "Presentation Definition",
    "Credentials",
    "SSI",
    "OpenID",
    "SIOP",
    "Self Issued OpenId Provider",
    "OpenId for Verifiable Presentations",
    "SIOPv2",
    "OID4VC",
    "OID4VP",
    "OpenID4VP",
    "OpenID4VC",
    "OIDC4VP"
  ]
}
